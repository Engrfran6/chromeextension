{
  "manifest_version": 3,
  "name": "Responsive Previewer",
  "version": "1.0",
  "action": {
    "default_icon": "out/favicon.ico"
  },
  "permissions": ["windows"],
  "background": {
    "service_worker": "/background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
